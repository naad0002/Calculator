<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="700dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:layout_marginBottom="600dp"
        android:text="Calculator"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="AC"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttondel"
        app:layout_constraintEnd_toStartOf="@+id/buttondel" />

    <Button
        android:id="@+id/buttondel"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="225dp"
        android:layout_marginLeft="225dp"
        android:text="DEL"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonrem"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonrem"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="%"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttondiv"
        app:layout_constraintStart_toEndOf="@+id/buttondel" />

    <Button
        android:id="@+id/buttondiv"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttondot"
        app:layout_constraintEnd_toStartOf="@+id/buttondot"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonrem" />

    <Button
        android:id="@+id/buttonsev"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="7"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttoneight"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttoneight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"

        android:layout_marginLeft="20dp"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonnine"
        app:layout_constraintStart_toEndOf="@id/buttonsev" />

    <Button
        android:id="@+id/buttonnine"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonone"
        app:layout_constraintEnd_toStartOf="@+id/buttonone"
        app:layout_constraintStart_toEndOf="@+id/buttoneight" />

    <Button
        android:id="@+id/buttonfour"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="4"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonfive"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonfive"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonsix"
        app:layout_constraintEnd_toStartOf="@+id/buttonsix" />

    <Button
        android:id="@+id/buttonsix"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonzero"
        app:layout_constraintEnd_toStartOf="@+id/buttonzero" />

    <Button
        android:id="@+id/buttonone"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:text="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttontwo"
        tools:layout_editor_absoluteX="320dp" />

    <Button
        android:id="@+id/buttontwo"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonthree"
        app:layout_constraintEnd_toStartOf="@+id/buttonthree" />

    <Button
        android:id="@+id/buttonthree"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonsub"
        tools:layout_editor_absoluteX="521dp" />

    <Button
        android:id="@+id/buttondot"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonmul"
        tools:layout_editor_absoluteX="521dp" />

    <Button
        android:id="@+id/buttonzero"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonbra"
        app:layout_constraintEnd_toStartOf="@+id/buttonbra" />

    <Button
        android:id="@+id/buttonbra"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="( )"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonadd"
        app:layout_constraintEnd_toStartOf="@+id/buttonadd" />

    <Button
        android:id="@+id/buttonmul"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/buttonsub"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonthree"
        app:layout_constraintTop_toBottomOf="@+id/buttonmul" />

    <Button
        android:id="@+id/buttonadd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="+"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttoneq"
        app:layout_constraintEnd_toStartOf="@+id/buttoneq" />

    <Button
        android:id="@+id/buttoneq"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsub" />


</androidx.constraintlayout.widget.ConstraintLayout >
